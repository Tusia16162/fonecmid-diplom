	Команда.Заголовок = "Заполнить (ВКМ)";
	Команда.Действие = "ВКМ_Заполнить";
	
	КнопкаФормы = Элементы.Добавить("Кнопка_ВКМ_Заполнить", Тип("КнопкаФормы"),КоманднаяПанель);		
	КнопкаФормы.ИмяКоманды = "ВКМ_Заполнить";
	КнопкаФормы.Вид = ВидКнопкиФормы.ОбычнаяКнопка; 
	
